SELECT ProductID,ProductName
FROM products
WHERE ProductID IN(SELECT ProductID
                   FROM [order details]
                   GROUP BY ProductID
                   HAVING sum(Quantity )>1200)


SELECT *
from Products
where UnitPrice > all (select UnitPrice
						from Products
						where CategoryID = 2)
   =======================================
select *
from Products
where UnitPrice > (select max(UnitPrice)
                     from Products
				     where CategoryID=2)
