SELECT ProductID,ProductName
FROM products
WHERE ProductID IN(SELECT ProductID
                   FROM [order details]
                   GROUP BY ProductID
                   HAVING sum(Quantity )>1200)


SELECT *
from Products
where UnitPrice > all (select UnitPrice
			from Products
			where CategoryID = 2)
   =======================================
select *
from Products
where UnitPrice > (select max(UnitPrice)
                   from Products
		   where CategoryID=2)

select *
from Products
where UnitPrice >all (select UnitPrice
                     from Products
		    where CategoryID=2)
=======================================
select *
from Products
where UnitPrice > (select min(UnitPrice)
                     from Products
		     where CategoryID=2)

select *
from Products
where UnitPrice >any (select UnitPrice
                     from Products
	             where CategoryID=2)


--*** ex 1
הצג מטבלת Products את שמות המוצרים אשר מחירם נמוך מהמחיר של מוצר מספר .

SELECT ProductName
from Products
where UnitPrice < (select UnitPrice
		   from Products
		   where ProductID = 8)

--*** ex 5
הצג מטבלת Products את שמות המוצרים וכמותם במלאי, עבור המוצרים אשר כמותם במלאי נמוכה יותר
מהכמות המינימלית בקטגוריה מספר 5

SELECT ProductName, UnitsInStock
from Products
where UnitsInStock < (select min(UnitsInStock)
			  	   from Products
				   where CategoryID = 5)

--*** ex 8
הצג מטבלת Products את שם המוצר ומחירו, עבור המוצרים אשר מחירם גבוה מלפחות אחד המוצרים
בקטגוריה מספר 5

